<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingRight="@dimen/dp_25"
    android:paddingLeft="@dimen/dp_25"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/input_phone_icon_selector"
            android:hint="手机号"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/iv_login_mobile_delete"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/android_delete_login"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View style="@style/order_line_1"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckedTextView
            android:id="@+id/cb_show_pw_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/checkbox_showpasswordornot_selector" />

        <ImageView
            android:id="@+id/iv_password_delete"
            android:visibility="invisible"
            android:layout_toLeftOf="@id/cb_show_pw_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:src="@drawable/android_delete_login"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_password_delete"
            android:paddingLeft="@dimen/dp_5"
            android:textSize="@dimen/sp_16"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawablePadding="@dimen/dp_10"
            android:drawableLeft="@drawable/input_password_selector"
            android:hint="密码"
            android:inputType="textPassword"/>
    </RelativeLayout>
    <View
        style="@style/order_line_1"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/chbox_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_backg"
            android:paddingLeft="@dimen/dp_10"
            android:text="记住账号"
            android:textColor="@drawable/text_color_jzmm" />
        <TextView
            android:id="@+id/tv_forget_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chbox_remember"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/chbox_remember"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@drawable/text_color_jzmm"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:gravity="center"
        android:id="@+id/tv_login"
        android:layout_marginTop="@dimen/dp_50"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="登录"/>
    <TextView
        android:gravity="center"
        android:id="@+id/tv_register"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_8"
        android:textSize="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_two"
        android:text="注册"/>

</LinearLayout>