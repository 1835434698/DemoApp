<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bg"
            android:textColor="@color/color_D26636"
            android:text="王先生手机尾号3568订单"/>

        <View style="@style/order_view_two"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_zero">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_one"
                    android:text="热"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/detail_text_one"
                    android:text="菜"/>
            </LinearLayout>


            <View style="@style/vertical_line"/>

            <com.pdscjxy.serverapp.view.CustomListView
                android:id="@+id/lv_hotdish"
                android:listSelector="@android:color/transparent"
                android:divider="@null"
                android:dividerHeight="0dip"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="vertical">

            </com.pdscjxy.serverapp.view.CustomListView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_zero">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_one"
                    android:text="凉"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/detail_text_one"
                    android:text="菜"/>
            </LinearLayout>


            <View style="@style/vertical_line"/>

            <com.pdscjxy.serverapp.view.CustomListView
                android:id="@+id/lv_cooldish"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="vertical">

            </com.pdscjxy.serverapp.view.CustomListView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_22"
            android:layout_marginTop="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_zero">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_one"
                    android:text="面"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    style="@style/detail_text_one"
                    android:text="点"/>
            </LinearLayout>


            <View style="@style/vertical_line"/>

            <com.pdscjxy.serverapp.view.CustomListView
                android:id="@+id/lv_noodle"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:orientation="vertical">

            </com.pdscjxy.serverapp.view.CustomListView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_22"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_marginTop="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_zero">


            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                style="@style/detail_text_four"
                android:text="热菜"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_five"
                android:text="5"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_four"
                android:text="个，"/>

            <TextView
                style="@style/detail_text_four"
                android:text="凉菜"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_five"
                android:text="5"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_four"
                android:text="个，"/>

            <TextView
                style="@style/detail_text_four"
                android:text="面点"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_five"
                android:text="5"/>
            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                style="@style/detail_text_four"
                android:text="个，口味"/>
            <TextView
                style="@style/detail_text_five"
                android:text="微辣"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_22"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:layout_marginTop="-1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rectangle_zero">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    style="@style/detail_text_four"
                    android:text="合计"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    style="@style/detail_text_five"
                    android:text="15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_four"
                    android:text="共"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    style="@style/detail_text_five"
                    android:text="165"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    style="@style/detail_text_four"
                    android:text="元"/>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_4"
            android:paddingTop="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bg"
            android:textColor="@android:color/white"
            android:text="建议换菜"/>



    </LinearLayout>
</ScrollView>