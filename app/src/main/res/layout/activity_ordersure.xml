<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:padding="@dimen/dp_8"
            android:textSize="@dimen/sp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_bg"
            android:textColor="@color/color_D26636"
            android:text="王先生手机尾号3568订单"/>

        <View style="@style/order_view_two"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_four"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="菜品数量"/>
                <TextView
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    style="@style/detail_text_four"
                    android:background="@drawable/rectangle_four"
                    android:text="13"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/detail_text_four"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:text="包间名称"/>
                <TextView
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_alignParentRight="true"
                    style="@style/detail_text_four"
                    android:background="@drawable/rectangle_four"
                    android:text="河南厅"/>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/order_line_2"
            android:layout_marginTop="@dimen/dp_10"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="合计"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_41"
                style="@style/order_text_seven"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="$ 88"/>
        </RelativeLayout>

        <View style="@style/order_view_two"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="代金券"/>
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_41"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:background="@drawable/rectangle_four"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/color_72B8BF"
                    android:paddingLeft="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_7"
                    android:text="-"/>

                <TextView
                    android:id="@+id/tv_voucher"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="-1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_four"
                    android:textSize="@dimen/sp_14"
                    android:text="1"/>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginLeft="-1dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/rectangle_four"
                    android:textSize="@dimen/sp_18"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingRight="@dimen/dp_5"
                    android:textColor="@color/color_72B8BF"
                    android:text="+"/>

            </LinearLayout>
        </RelativeLayout>
        <View style="@style/order_line_2"
            android:layout_marginTop="@dimen/dp_10"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="使用积分"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_41">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@android:color/black"
                    android:text="本单不可用积分折扣"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_9"
                    android:text="共有积分79"/>

            </LinearLayout>
        </RelativeLayout>

        <View style="@style/order_view_two"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="剩余支付"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_41"
                style="@style/order_text_seven"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="$ 88"/>
        </RelativeLayout>
        <View style="@style/order_line_2"
            android:layout_marginTop="@dimen/dp_10"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="实付金额"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_41"
                style="@style/order_text_seven"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="$ 88"/>
        </RelativeLayout>
        <View style="@style/order_view_two"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:text="客户姓名：刘**"/>
            <TextView
                style="@style/detail_text_four"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="联系电话：183375***52"/>
        </RelativeLayout>
        <View style="@style/order_line_2"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_kh"
                style="@style/detail_text_four"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="客户留言："/>

            <EditText
                android:id="@+id/et_message"
                android:layout_toRightOf="@id/tv_name_kh"
                android:layout_marginRight="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_2"
                android:gravity="left|top"
                android:textSize="@dimen/sp_13"
                android:background="@drawable/rectangle_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

            </EditText>
        </RelativeLayout>
        <View style="@style/order_view_two"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_3"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/rectangle_bg_one"
                android:textColor="@android:color/white"
                android:text="可订"/>
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-2dp"
                android:paddingBottom="@dimen/dp_3"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_10"
                android:background="@drawable/rectangle_two"
                android:textColor="@color/color_D26636"
                android:text="取消"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>