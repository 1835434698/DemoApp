<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_tab"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_one"
                android:text="您一共有"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                style="@style/order_text_two"
                android:text="60"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_one"
                android:text="笔订单"/>

        </LinearLayout>

        <View style="@style/order_line"/>
        <!--包间详情-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/order_text_three"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="包间详情"/>

        <com.pdscjxy.serverapp.view.CustomGridView
            android:id="@+id/gv_one"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.pdscjxy.serverapp.view.CustomGridView>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_show_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                style="@style/order_text_four"
                android:text="收起"/>

            <ImageView
                android:id="@+id/iv_show_1"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_up"/>

        </LinearLayout>

        <View style="@style/order_line"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_five"
                android:text="备注"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_five"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="白色未定"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_six"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="绿色已定未定支付"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_seven"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="橙色已支付"/>
        </LinearLayout>

        <View android:layout_marginTop="@dimen/dp_15"
            style="@style/order_view_one"/>
<!--包间详情结束-->
<!--卡座详情-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/order_text_three"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="卡座详情"/>

        <View style="@style/order_line_1"
            android:layout_marginBottom="@dimen/dp_5"/>

        <com.pdscjxy.serverapp.view.CustomGridView
            android:id="@+id/gv_two"
            android:listSelector="@android:color/transparent"
            android:numColumns="4"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.pdscjxy.serverapp.view.CustomGridView>

        <LinearLayout
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_show_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_four"
                android:padding="@dimen/dp_10"
                android:text="收起"/>

            <ImageView
                android:id="@+id/iv_show_2"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_up"/>

        </LinearLayout>

        <View style="@style/order_line"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_five"
                android:text="备注"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_five"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="白色未定"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_six"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="绿色已定未支付"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/order_text_seven"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="橙色已支付"/>
        </LinearLayout>
<!--卡座详情结束-->


    </LinearLayout>
</ScrollView>